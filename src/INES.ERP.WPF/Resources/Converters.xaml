<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:INES.ERP.WPF.Converters">

    <!-- Boolean to Visibility Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>

    <!-- Boolean to Text Converter -->
    <converters:BooleanToTextConverter x:Key="BooleanToTextConverter"/>

    <!-- Boolean to Icon Converter -->
    <converters:BooleanToIconConverter x:Key="BooleanToIconConverter"/>

    <!-- Null to Visibility Converter -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

    <!-- String to Visibility Converter -->
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <!-- Enum to String Converter -->
    <converters:EnumToStringConverter x:Key="EnumToStringConverter"/>

    <!-- Date Format Converter -->
    <converters:DateFormatConverter x:Key="DateFormatConverter"/>

    <!-- Currency Format Converter -->
    <converters:CurrencyFormatConverter x:Key="CurrencyFormatConverter"/>

    <!-- Percentage Format Converter -->
    <converters:PercentageFormatConverter x:Key="PercentageFormatConverter"/>

</ResourceDictionary>
