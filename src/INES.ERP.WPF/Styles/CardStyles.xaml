<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Standard Card Style -->
    <Style x:Key="StandardCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
    </Style>

    <!-- Compact Card Style -->
    <Style x:Key="CompactCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="Padding" Value="{StaticResource NormalPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
    </Style>

    <!-- Dashboard Card Style -->
    <Style x:Key="DashboardCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="MinHeight" Value="120"/>
        <Setter Property="Margin" Value="{StaticResource MediumMargin}"/>
        <Setter Property="Effect" Value="{StaticResource MediumShadow}"/>
    </Style>

    <!-- Info Card Style -->
    <Style x:Key="InfoCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Success Card Style -->
    <Style x:Key="SuccessCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Warning Card Style -->
    <Style x:Key="WarningCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Error Card Style -->
    <Style x:Key="ErrorCardStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

</ResourceDictionary>
