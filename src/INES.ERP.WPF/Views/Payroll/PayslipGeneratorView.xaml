<Page x:Class="INES.ERP.WPF.Views.Payroll.PayslipGeneratorView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:INES.ERP.WPF.ViewModels.Payroll"
      Title="Payslip Generator">

    <Page.DataContext>
        <viewModels:PayslipGeneratorViewModel/>
    </Page.DataContext>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border Style="{StaticResource StandardCardStyle}" Margin="{StaticResource LargePadding}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="FileDocument" 
                                         Width="64" Height="64"
                                         Foreground="{StaticResource PrimaryBrush}"
                                         Margin="{StaticResource LargePadding}"/>
                <TextBlock Text="Payslip Generator"
                           Style="{StaticResource HeadingTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource MediumMargin}"/>
                <TextBlock Text="Generate employee payslips"
                           Style="{StaticResource BodyTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource SmallMargin}"/>
                <TextBlock Text="This module is under development"
                           Style="{StaticResource CaptionTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource MediumMargin}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
