<Page x:Class="INES.ERP.WPF.Views.StudentAccounts.PenaltyManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:viewModels="clr-namespace:INES.ERP.WPF.ViewModels.StudentAccounts"
      Title="Penalty Management">

    <Page.DataContext>
        <viewModels:PenaltyManagementViewModel/>
    </Page.DataContext>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Border Style="{StaticResource StandardCardStyle}" Margin="{StaticResource LargePadding}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="AlertCircle" 
                                         Width="64" Height="64"
                                         Foreground="{StaticResource PrimaryBrush}"
                                         Margin="{StaticResource LargePadding}"/>
                <TextBlock Text="Penalty Management"
                           Style="{StaticResource HeadingTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource MediumMargin}"/>
                <TextBlock Text="Manage student penalties and late fees"
                           Style="{StaticResource BodyTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource SmallMargin}"/>
                <TextBlock Text="This module is under development"
                           Style="{StaticResource CaptionTextStyle}"
                           HorizontalAlignment="Center"
                           Margin="{StaticResource MediumMargin}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
